{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["bun-types"],
    "baseUrl": ".",
    "paths": {
      "@agents": ["src/agents"],
      "@config": ["src/config"],
      "@session": ["src/session"],
      "@state": ["src/state"],
      "@tools": ["src/tools"],
      "@ui": ["src/ui"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
